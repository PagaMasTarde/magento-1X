<?xml version="1.0"?>
<config>

    <modules>
        <DigitalOrigin_Pmt>
            <version>6.2.7</version>
        </DigitalOrigin_Pmt>
    </modules>

    <global>

        <helpers>
            <pmt>
                <class>DigitalOrigin_Pmt_Helper</class>
            </pmt>
        </helpers>

        <blocks>
            <pmt>
                <class>DigitalOrigin_Pmt_Block</class>
            </pmt>
        </blocks>

        <models>
            <pmt>
                <class>DigitalOrigin_Pmt_Model</class>
            </pmt>
        </models>

        <resources>
            <payment_custom_setup>
                <setup>
                    <module>DigitalOrigin_Pmt</module>
                </setup>
            </payment_custom_setup>
        </resources>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <DigitalOrigin_Pmt>
                    <files>
                        <default>DigitalOrigin_Pmt.csv</default>
                    </files>
                </DigitalOrigin_Pmt>
            </modules>
        </translate>
        <layout>
            <updates>
                <bar>
                    <file>pmt.xml</file>
                </bar>
            </updates>
        </layout>
    </adminhtml>

    <frontend>
        <routers>
            <pmt>
                <use>standard</use>
                <args>
                    <module>DigitalOrigin_Pmt</module>
                    <frontName>pmt</frontName>
                </args>
            </pmt>
        </routers>
        <layout>
            <updates>
                <pmt>
                    <file>pmt.xml</file>
                </pmt>
            </updates>
        </layout>
    </frontend>

    <default>
        <payment>
            <paylater translate="title" module="pmt">
                <active>1</active>
                <title>Paga+Tarde</title>
                <model>pmt/paylater</model>
                <order_status>pending_payment</order_status>
                <allowspecific>0</allowspecific>
                <payment_action>sale</payment_action>
                <PAYLATER_PROD>0</PAYLATER_PROD>
                <PAYLATER_PRODUCT_HOOK_TYPE>1</PAYLATER_PRODUCT_HOOK_TYPE>
                <PAYLATER_CHECKOUT_HOOK_TYPE>1</PAYLATER_CHECKOUT_HOOK_TYPE>
                <MIN_AMOUNT>10</MIN_AMOUNT>
                <PAYLATER_TITLE>Financiación instantánea - 100% online</PAYLATER_TITLE>
                <sort_order>1</sort_order>
                <PAYLATER_KO_URL>checkout/cart/</PAYLATER_KO_URL>
                <PAYLATER_OK_URL>checkout/onepage/success/</PAYLATER_OK_URL>
            </paylater>
        </payment>
    </default>

</config>
